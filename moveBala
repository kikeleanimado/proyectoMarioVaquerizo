using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class move : MonoBehaviour
{
    public float velocidad = 20f; //velocidad con la que se mueve la bala
    public Rigidbody2D rb; //la componente Rigidbody2D de la bala, la abrevio como rb


    //La funci贸n start se lee en el primer frame del juego
    void Start()
    {
        //Le aplicamos al 贸bjeto una velocidad vertical desde su punto de vista
        rb.velocity = transform.up * velocidad; //up es el vector que apunta hacia arriba desde la perspectiva del objeto.
                                                //Da igual la inclinaci贸n de la bala, la velocidad siempre va a ir en la direcci贸n de su vertical (transform.up)
    }
}
